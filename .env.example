# Telegram Bot Configuration
# Copy this file to .env and fill in your values

# Your Telegram Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# Comma-separated list of Telegram User IDs allowed to use the bot
# Leave empty to allow all users
# Example: 123456789,987654321
ALLOWED_USER_IDS=

# Optional: Default volume (25, 50, 75, or 100)
DEFAULT_VOLUME=75

# Optional: Enable debug logging (true/false)
DEBUG=false

# Optional: Enable YouTube suggestions when queue finishes (true/false)
# Default: false (uses auto-loop playlist instead for better stability)
ENABLE_YOUTUBE_SUGGESTIONS=false
