[Unit]
Description=Play YouTube in CLI Bot
After=network.target

[Service]
Type=simple
User=jhopan
Group=jhopan
WorkingDirectory=/home/jhopan/Play-Youtube-In-CLI
ExecStart=/home/jhopan/Play-Youtube-In-CLI/venv/bin/python /home/jhopan/Play-Youtube-In-CLI/main.py
Restart=always
RestartSec=10

# Environment
Environment="PYTHONUNBUFFERED=1"

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ytmusic_bot

[Install]
WantedBy=multi-user.target
